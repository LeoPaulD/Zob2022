<!DOCTYPE html>
<html lang="fr">

{% include "head.njk" %}

<body>

    <div class="wrapper">

        {% include "header.njk" %}
    
        <main>

            {% include "back-home.njk" %}

            <h1>{{ title }}</h1>

            <img src="{{ image }}" alt="">

            <h2>Affaires</h2>

            <ul>
                {% for fact in facts %}
                <li>
                    <span>
                        <a href="{{ fact.source }}">{{ fact.title }}</a>
                    </span>

                    <span>
                        {{ fact.description }}
                    </span>
                </li>
                {% endfor %}
            </ul>
    
            {{ content | safe }}
    
        </main>

        {% include "footer.njk" %}

    </div>

</body>

</html>